<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.idata365.app.mapper.TaskPowerLogsMapper">
	<resultMap id="BasePowerLogsMap" type="com.idata365.app.entity.TaskPowerLogs">
	</resultMap>

	<!-- 插入成就值 -->
	<insert id="insertTaskPowerLogs" useGeneratedKeys="true" keyProperty="id" parameterType="com.idata365.app.entity.TaskPowerLogs">
		INSERT  IGNORE INTO
		taskPowerLogs
		(userId,taskType,createTime,jsonValue)
		values 
		(#{userId},#{taskType},now(),#{jsonValue})
	</insert>
	<select id="getPowerLog"  resultMap="BasePowerLogsMap" parameterType="com.idata365.app.entity.TaskPowerLogs">
		select * from taskPowerLogs where 
		userId=#{userId} and taskType=#{taskType}  and
		DATE_FORMAT(createTime,'%Y-%m-%d')=#{createTime} limit 1
		
	 </select>
	
	
	<!-- 定时处理逻辑 -->
    <update id="lockPowerLogsTask" parameterType="com.idata365.app.entity.TaskPowerLogs" >
       UPDATE 
            taskPowerLogs 
       SET 
        taskStatus=-1,taskFlag=#{taskFlag},taskDealTime=now()
       WHERE 
            taskStatus = 0  and taskFlag='0'  LIMIT 500  
    </update>	
	<!-- 获取任务 -->
	 <select id="getPowerLogsTask"  resultMap="BasePowerLogsMap" parameterType="com.idata365.app.entity.TaskPowerLogs">
		SELECT *  from taskPowerLogs where taskStatus=-1 and taskFlag=#{taskFlag}
	 </select>
	
	 <!-- 更新任务 -->
     <update id="updatePowerLogsSuccTask" parameterType="com.idata365.app.entity.TaskPowerLogs" >
        update taskPowerLogs set
        taskStatus=1,taskDealTime=now()
        where  id=#{id}
     </update>
     <!-- 失败的taskStatus分2种情况 2是彻底失败[达到失败上线]，0是还有重试的机会,taskStatus=2为失败-->
    <update id="updatePowerLogsFailTask" parameterType="com.idata365.app.entity.TaskPowerLogs" >
       UPDATE 
           taskPowerLogs 
       SET 
           taskStatus=#{taskStatus},taskFlag='0',taskDealTime=now(),failTimes=failTimes+1
       WHERE 
            id=#{id} 
     </update>
     
     <!-- 清除锁定的记录 -->
    <update id="clearLockTask" parameterType="java.lang.Long" >
       UPDATE 
           taskPowerLogs 
       SET 
           taskStatus=0,taskFlag='0',failTimes=failTimes+1
       WHERE 
              taskStatus=-1 and taskFlag<![CDATA[<]]>${compareTimes}
     </update>
<!-- 定时处理 结束-->		
</mapper>